<!DOCTYPE html>
<html>

<head>
    <title>Page Settings</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <style>
        .card:hover {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23);
            margin-bottom: 54px;
        }
        .settings-row {
            align-items: center;
            margin-bottom: 20px;
        }
        .settings-label {
            padding-right: 15px;
        }
        .time-picker-container {
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <nav class="light-blue lighten-1" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" href="#" class="brand-logo">Page Settings</a>
            <a href="/logout" class="right">Logout</a>
        </div>
    </nav>
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <br><br>
            <form action="/apply-settings" method="post">
                <% pages.forEach(function(page, index) { %>
                    <div class="row settings-row">
                        <div class="col s12">
                            <h5><%= page.name %> (ID: <%= page.id %>)</h5>
                        </div>
                        <div class="col s6 m3 settings-label">
                            <label for="posts_<%= index %>">Number of Posts:</label>
                        </div>
                        <div class="col s6 m3">
                            <input id="posts_<%= index %>" name="pages[<%= index %>][postsLimit]" type="number" class="validate posts-input" data-index="<%= index %>" min="1" max="24">
                        </div>
                        <div class="col s2 time-picker-container" id="timePickersContainer_<%= index %>">
                            <!-- Time pickers will be injected here based on the number of posts -->
                        </div>
                        <input type="hidden" name="pages[<%= index %>][id]" value="<%= page.id %>">
                    </div>
                <% }); %>
                <div class="row">
                    <div class="col s12">
                        <label>
                            <input type="checkbox" name="applyToAll" />
                            <span>Apply the first page settings to all pages</span>
                        </label>
                    </div>
                </div>
                <div class="row center">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Apply Settings
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const postsInputs = document.querySelectorAll('.posts-input');

            postsInputs.forEach(input => {
                input.addEventListener('change', function() {
                    const index = this.getAttribute('data-index');
                    const numberOfPosts = parseInt(this.value);
                    const container = document.querySelector(`#timePickersContainer_${index}`);
                    container.innerHTML = ''; // Clear previous time pickers

                    for (let i = 0; i < numberOfPosts; i++) {
                        const timePicker = document.createElement('input');
                        timePicker.type = 'text';
                        timePicker.classList.add('timepicker');
                        timePicker.name = `pages[${index}][scheduleTimes][${i}]`;
                        container.appendChild(timePicker);

                        M.Timepicker.init(timePicker, { twelveHour: false }); // Initialize new time picker
                    }
                });
            });
        });
    </script>
</body>

</html>
